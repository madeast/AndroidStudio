<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Games"
        android:id="@+id/videoGamesButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        android:id="@+id/familyButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Books"
        android:id="@+id/booksButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/foodButton"
        android:layout_above="@+id/familyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobbies"
        android:id="@+id/hobbyButton"
        android:layout_above="@+id/booksButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meImage"
        android:background="@drawable/Me"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/booksButton"
        android:layout_toRightOf="@+id/familyButton"
        android:layout_toEndOf="@+id/familyButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book1Image"
        android:background="@drawable/Books"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/hobbyButton"
        android:layout_alignEnd="@+id/hobbyButton"
        android:layout_toEndOf="@+id/book2Image"
        android:layout_toRightOf="@+id/book2Image"
        android:layout_alignBottom="@+id/book2Image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book2Image"
        android:background="@drawable/FavoriteBook"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_below="@+id/meImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/meImage"
        android:layout_toRightOf="@+id/meImage"
        android:layout_toEndOf="@+id/meImage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_below="@+id/meImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/bookView"
        android:layout_below="@+id/book1Image"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_above="@+id/foodButton"
        android:layout_alignRight="@+id/book1Image"
        android:layout_alignEnd="@+id/book1Image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/foodView"
        android:layout_above="@+id/foodButton"
        android:layout_alignRight="@+id/hobbyButton"
        android:layout_alignEnd="@+id/hobbyButton"
        android:layout_below="@+id/book1Image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/familyView"
        android:layout_below="@+id/book1Image"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_above="@+id/foodButton"
        android:layout_alignRight="@+id/hobbyButton"
        android:layout_alignEnd="@+id/hobbyButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I love playing video games. It&apos;s what I do in my spare time. Right now I am really into hearthstone."
        android:id="@+id/gameView"
        android:layout_below="@+id/book1Image"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_above="@+id/foodButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_below="@+id/book1Image"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_above="@+id/foodButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/meView" />

</RelativeLayout>
